@model PokemonMVC.Models.Pokemon

@{
    ViewBag.Title = $"{Model.Name} Details";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add Favicon Links Here -->
    <link rel="icon" type="image/png" href="~/Content/Images/FavIcon.svg">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .pokemon-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            padding: 30px;
        }

        .pokemon-image {
            text-align: center;
            margin-bottom: 20px;
        }

            .pokemon-image img {
                width: 200px;
                height: 200px;
                object-fit: contain;
                transition: transform 0.3s ease;
            }

            .pokemon-image:hover img {
                transform: scale(1.1);
            }

        .stat-bar {
            height: 20px;
            background: #eee;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 10px;
        }

        .stat-progress {
            height: 100%;
            background: linear-gradient(90deg, #4CAF50, #8BC34A);
            transition: width 0.5s ease;
        }

        .type-badge {
            font-size: 0.9rem;
            margin: 2px;
            padding: 8px 15px;
            border-radius: 20px;
        }

        .move-list {
            column-count: 2;
        }



        .pokemon-search-btn {
            position: relative;
            padding: 1rem 2.5rem;
            font-size: 1.2rem;
            border: none;
            border-radius: 50px;
            background: linear-gradient(45deg, #ff3b3b, #ff6b6b, #ff9f43);
            color: white;
            overflow: hidden;
            transition: all 0.5s ease;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: bold;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
        }

        .hover-effect {
            position: absolute;
            background: rgba(255, 255, 255, 0.2);
            width: 30px;
            height: 100%;
            left: -40px;
            top: 0;
            transform: skewX(-15deg);
            transition: all 0.6s ease;
        }

        .pokemon-search-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 107, 107, 0.6);
        }

            .pokemon-search-btn:hover .hover-effect {
                left: 110%;
            }

        .btn-icon {
            margin-left: 12px;
            font-size: 1.4rem;
            transition: transform 0.3s ease;
        }

        .pokemon-search-btn:hover .btn-icon {
            transform: rotate(360deg);
        }

        .btn-text {
            position: relative;
            z-index: 1;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }

        /* Pulse animation */
        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .pokemon-search-btn {
            animation: pulse 2s infinite;
        }
    </style>
</head>
<body>
    <div class="pokemon-card">
        <div class="pokemon-image">
            <img src="@Model.Sprites.Other.OfficialArtwork.FrontDefault"
                 alt="@Model.Name"
                 class="img-fluid">
        </div>

        <h1 class="text-center mb-4">
            #@Model.Id - @Model.Name.ToUpper()
            <small class="text-muted d-block">@Model.Species.Name</small>
        </h1>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Basic Info</h5>
                        <p class="card-text">
                            <strong>Height:</strong> @(Model.Height / 10.0)m<br>
                            <strong>Weight:</strong> @(Model.Weight / 10.0)kg<br>
                            <strong>Base Experience:</strong> @Model.BaseExperience
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Types</h5>

                        @foreach (var type in Model.Types)
                        {
                            @*<span class="badge type-badge bg-primary">@type.Type.Name</span>*@
                        }

                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Stats</h5>
                @foreach (var stat in Model.Stats)
                {
                    <div class="stat-container mb-3">
                        <div class="d-flex justify-content-between">
                            <span>@stat.Stat.Name.ToUpper()</span>
                            <span>@stat.BaseStat</span>
                        </div>
                        <div class="stat-bar">
                            <div class="stat-progress"
                                 style="width: @(stat.BaseStat / 2.55)%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Abilities</h5>
                <div class="row">
                    @if (Model.Abilities != null)
                    {
                        foreach (var ability in Model.Abilities)
                        {
                            <div class="col-md-4 mb-2">
                                @*<span class="badge bg-success">@ability.Ability.Name</span>*@
                            </div>
                        }
                    }

                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Moves (@Model.Moves.Count)</h5>
                <div class="move-list">
                    @foreach (var move in Model.Moves)
                    {
                        <span class="badge bg-info me-2 mb-2">@move.Move.Name</span>
                    }
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index")" class="pokemon-search-btn">
                <span class="btn-text">Search Another Pokemon</span>
                <span class="hover-effect"></span>
                <i class="fas fa-pokeball btn-icon"></i>
            </a>
        </div>
    </div>

    <script>
        // Add animation to stat bars on page load
        document.addEventListener('DOMContentLoaded', function () {
            const progressBars = document.querySelectorAll('.stat-progress');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 500);
            });
        });
    </script>
</body>
</html>